<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="jp.sourceforge.tmdmaker.rcp.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="jp.sourceforge.tmdmaker.rcp.Perspective"
            fixed="true"
            id="tmdmaker.rcp.perspective"
            name="RCP Perspective">
      </perspective>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="tmdmaker.rcp.application"
            name="TMD-Maker for RCP">
         <property
               name="tmdmaker.rcp"
               value="TMD-Maker for RCP">
         </property>
         <property
               name="appName"
               value="TMD-Maker for RCP">
         </property>
         <property
               name="windowImages"
               value="icons/window/tmd_icon_16_32bit.png,icons/window/tmd_icon_32_32bit.png,icons/window/tmd_icon_48_32bit.png,icons/window/tmd_icon_64_32bit.png,icons/window/tmd_icon_128_32bit.png">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               label="&amp;File">
            <command
                  commandId="org.eclipse.ui.newWizard"
                  label="&amp;New"
                  style="push">
            </command>
            <separator
                  name="tmdmaker.rcp.separator1"
                  visible="true">
            </separator>
            <command
                  commandId="org.eclipse.ui.file.close"
                  label="&amp;Close"
                  style="push">
            </command>
            <separator
                  name="tmdmaker.rcp.separator2"
                  visible="true">
            </separator>
            <command
                  commandId="org.eclipse.ui.file.save"
                  label="&amp;Save"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.file.saveAs"
                  label="Save &amp;As"
                  style="push">
            </command>
            <separator
                  name="tmdmaker.rcp.separator3"
                  visible="true">
            </separator>
            <command
                  commandId="org.eclipse.ui.file.exit"
                  label="E&amp;xit"
                  style="push">
            </command>
         </menu>
         <menu
               label="&amp;Edit">
            <command
                  commandId="org.eclipse.ui.edit.undo"
                  label="&amp;Undo"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.edit.redo"
                  label="&amp;Redo"
                  style="push">
            </command>
            <separator
                  name="tmdmaker.rcp.separator5"
                  visible="true">
            </separator>
            <command
                  commandId="org.eclipse.ui.edit.copy"
                  label="&amp;Copy"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.edit.paste"
                  label="&amp;Paste"
                  style="push">
            </command>
            <separator
                  name="tmdmaker.rcp.separator6"
                  visible="true">
            </separator>
            <command
                  commandId="org.eclipse.ui.edit.delete"
                  label="&amp;Delete"
                  style="push">
            </command>
         </menu>
         <menu
               label="&amp;Window">
            <command
                  commandId="org.eclipse.ui.window.preferences"
                  label="&amp;Preferences"
                  style="push">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar">
         <toolbar
               id="tmdmaker.rcp.toolbar1">
            <command
                  commandId="org.eclipse.ui.newWizard"
                  label="&amp;New"
                  style="push">
            </command>
            <separator
                  name="tmdmaker.rcp.separator1"
                  visible="true">
            </separator>
            <command
                  commandId="org.eclipse.ui.file.save"
                  label="&amp;Save"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.file.saveAs"
                  label="Save &amp;As"
                  style="push">
            </command>
         </toolbar>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <view
               closeable="false"
               id="org.eclipse.ui.navigator.ProjectExplorer"
               minimized="false"
               ratio="0.3"
               relationship="left"
               visible="true">
         </view>
         <view
               closeable="false"
               id="org.eclipse.ui.views.ContentOutline"
               minimized="false"
               ratio="0.7"
               relationship="right"
               visible="true">
         </view>
      </perspectiveExtension>
   </extension>

</plugin>
